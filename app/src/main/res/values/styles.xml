    <style name="text_normal_chat_send">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:background">@drawable/chat_send_bubble</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/proxima_nova_normal</item>
    </style>

    <style name="text_normal_chat_receive">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:background">@drawable/chat_receive_bubble</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/proxima_nova_normal</item>
    </style>

    <style name="text_normal_black_user_light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular_thin</item>
    </style>

    <style name="text_normal_black_user_light_small">
        <item name="android:layout_height">wrap_content</item>
